<%= form_tag admin_session_path, method: 'post', class: "form-horizontal" do %>
  <fieldset>
    <legend>Login</legend>

    <div class="form-group">
      <%= label_tag :username, nil, class: "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= text_field_tag :username, nil, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= label_tag :password, nil, class: "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= password_field_tag :password, nil, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-lg-2"></div>
      <div class="col-lg-10">
        <%= submit_tag "Login", class: "btn btn-default" %>
      </div>
    </div>
  </fieldset>
<% end %>
