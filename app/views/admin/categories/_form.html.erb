<%= form_for [:admin, record], html: { class: "form-horizontal" } do |f| %>
  <fieldset>
    <legend><%= title %></legend>

    <%= form_errors(f) %>

    <div class="form-group">
      <%= f.label :key, nil, class: "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= f.text_field :key, class: "form-control", disabled: record.persisted? %>
        <p class="help-block">A unique key for this category. For internal use only.</p>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :title, nil, class: "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= f.text_field :title, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-lg-2"></div>
      <div class="col-lg-10">
        <%= submit_tag "Save", class: "btn btn-default" %>
        <%= delete_tag record %>
      </div>
    </div>
  </fieldset>
<% end %>
