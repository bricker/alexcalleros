<%= form_for [:admin, record], html: { class: "form-horizontal" } do |f| %>
  <fieldset>
    <legend><%= title %></legend>

    <%= form_errors(f) %>

    <div class="form-group">
      <%= f.label :slug, nil, class: "col-lg-2 control-label" %>
      <div class="col-lg-6 col-sm-6">
        <%= f.text_field :slug, class: "form-control", disabled: record.persisted? %>
        <p class="help-block">A unique slug for URLs. You may leave this blank - it will be generated automatically.</p>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :title, nil, class: "col-lg-2 control-label" %>
      <div class="col-lg-6 col-sm-6">
        <%= f.text_field :title, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :position, nil, class: "col-lg-2 control-label" %>
      <div class="col-lg-2 col-sm-2">
        <%= f.number_field :position, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-lg-2"></div>
      <div class="col-lg-6 col-sm-6">
        <%= submit_tag "Save", class: "btn btn-default" %>
        <%= delete_tag record %>
      </div>
    </div>
  </fieldset>
<% end %>
