<h2>Categories<%= link_to "Add a Category", new_admin_category_path, class: "pull-right btn btn-success" %></h2>

<table class="table table-hover">
  <thead>
    <tr>
      <th width="5%">Edit</th>
      <th width="65%">Title</th>
      <th width="15%">Position</th>
      <th width="15"># Videos</th>
    </tr>
  </thead>

  <tbody>
<% @records.each do |category| %>
  <tr>
    <td>
      <%= link_to "Edit", edit_admin_category_path(category), class: "btn btn-info" %>
    </td>

    <td><%= category.title %></td>
    <td><%= category.position %></td>
    <td><%= category.videos.count %></td>
  </tr>
<% end %>
  </tbody>
</table>

<% if @records.empty? %>
  There are no categories.
<% end %>
