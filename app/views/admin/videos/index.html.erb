<h2>Videos<%= link_to "Add a Video", new_admin_video_path, class: "pull-right btn btn-success" %></h2>

<table class="table table-hover">
  <thead>
    <tr>
      <th width="5%">Edit</th>
      <th width="25%">Title</th>
      <th width="15%">Category</th>
      <th width="30%">Video URL</th>
    </tr>
  </thead>

  <tbody>
<% @records.each do |video| %>
  <tr>
    <td>
      <%= link_to "Edit", edit_admin_video_path(video), class: "btn btn-info" %>
    </td>

    <td><%= video.title %></td>
    <td><%= video.category.try(:title) %></td>
    <td><%= link_to video.url, video.url %></td>
  </tr>
<% end %>
  </tbody>
</table>

<% if @records.empty? %>
  There are no videos.
<% end %>
