<h2>Content<%= link_to "Add Content", new_admin_content_path, class: "pull-right btn btn-success" %></h2>

<table class="table table-hover">
  <thead>
    <tr>
      <th width="5%">Edit</th>
      <th width="60%">Key</th>
      <th width="35">Last Updated</th>
    </tr>
  </thead>

  <tbody>
<% @records.each do |content| %>
  <tr>
    <td>
      <%= link_to "Edit", edit_admin_content_path(content), class: "btn btn-info" %>
    </td>

    <td><%= content.key %></td>
    <td><%= content.updated_at.strftime("%B %e, %Y") %></td>
  </tr>
<% end %>
  </tbody>
</table>

<% if @records.empty? %>
  There is no content.
<% end %>
